<h2>Sign in</h2>

<div class="span-12 colborder">
  <%= form_for(resource, :as => resource_name, :url =>"/users/auth/ldap") do |f| %>
  <div><%= f.label :name %><br />
    <input class="string required" id="username" name="username" placeholder="Ваш логин" required="required" size="30" type="text" />
  </div>

  <div>
    <%= f.label :password %><br />
    <input class="password required" id="password" name="password" placeholder="Доменный пароль" required="required" size="30" type="password" />
    <div class="hint">Такой же, как на компьютере</div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
  <br/>
  <div><%= f.submit "Sign in", :class => "lbutton vm" %></div>
  <% end %>
</div>
<div>
  <%= render :partial => "devise/shared/links" %>
</div>
